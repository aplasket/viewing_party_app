<!DOCTYPE html>
<html>
  <head>
    <title>ViewingPartyLite7</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <div class="top-container">

      <div class="container">
          <% flash.each do |type, notice| %>
            <h5 class="text-info"><b><%= notice %></b></h5>
          <% end %>
      </div>

      <div class="nav-container container-fluid">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
          <div class="navbar-header">
            <a class="navbar-brand" href="#"></h1>Viewing Party</h1></a>
          </div>
          <ul class="nav navbar-nav">
            <li class="active"><a href= "<%= root_path %>">Home</a></li>
            <li><a href="<%= discover_path %>">Discover Movies</a></li>
          </ul>

          <ul class="nav navbar-nav navbar-right">
          <% if current_user %>
              <li><a href="<%= dashboard_path %>"><span class="glyphicon glyphicon-user"></span> My Dashboard</a></li>
              <li><a data-turbo-method = "delete" href="<%= login_path %>" rel="nofollow"><span class="glyphicon glyphicon-log-in"></span> Log Out</a></li>
          <% else %>
              <li><a href="<%= register_path %>"><span class="glyphicon glyphicon-user"></span> Create a New User </a></li>
              <li><a href="<%= login_path %>"><span class="glyphicon glyphicon-log-in"></span> Log In</a></li>
          <% end %>
          </ul>
            <!--<div class="btn btn-succss"><li><%= button_to "Home", root_path, method: :get %></li></div>
            <div class="btn btn-succss"><li><%= button_to "Discover Movies", discover_path, method: :get %></li></div>

              <% if current_user %>
                <div class="btn btn-succss"><li><%= button_to "My Dashboard", dashboard_path, method: :get %></li></div>
                <div class="btn btn-succss"><li><%= button_to "Log Out", login_path, method: :delete %></li></div>

              <% else %>
                <div class="btn btn-succss"><li><%= button_to "Create a New User", register_path, method: :get %></li></div>
                <div class="btn btn-succss"><li><%= button_to "Log In", login_path, method: :get %></li></div>
              <% end %>-->
        </nav>
      </div>

      <div class="container">
        <%= yield %>
      </div>
    </div>
  </body>
</html>
