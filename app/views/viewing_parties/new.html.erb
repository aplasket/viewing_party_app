<h3>Create a Movie Party</h3></br>

<h4>Viewing Party Details</h4>
<div class="party_details">
  <p>Movie Title: <%= @movie.title %></p>
    <%= form_with url: movie_viewing_parties_path(@movie.id), local: true do |f| %>
      <%= f.label :duration, "Duration of Party" %>
      <%= f.number_field :duration, value: @movie.runtime, min: @movie.runtime, max: 300 %></br>
      <%= f.label :party_date, "Day" %>
      <%= f.date_field :party_date %></br>
      <%= f.label :party_time %>
      <%= f.time_field :party_time %></br>
      <h4>Invite Other Users</h4>
      <%= f.label :check_boxes, "Invite Users" %>
      <%= f.collection_check_boxes :user_ids, @users, :id, :name %>
      <%= f.submit "Create Party" %>
    <% end %>
</div>